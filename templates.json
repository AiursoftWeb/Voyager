  "Rules": [
    {
      "Extension": ".cs",
      "DontReplaceWhenLineContains": "*",
      "ReplaceOverrides": [
        {
          "Old": "using {ProjectOrg}.{ProjectName}",
          "New": "using {ProjectOrg}.{ProjectName}"
        },
        {
          "Old": "namespace {ProjectOrg}.{ProjectName}",
          "New": "namespace {ProjectOrg}.{ProjectName}"
        },
        {
          "Old": "{ProjectOrg}.{ProjectName}",
          "New": "{ProjectOrg}.{ProjectName}"
        }
      ]
    },
    {
      "Extension": ".cshtml",
      "DontReplaceWhenLineContains": "*",
      "ReplaceOverrides": [
        {
          "Old": "@using {ProjectOrg}.{ProjectName}",
          "New": "@using {ProjectOrg}.{ProjectName}"
        },
        {
          "Old": "@model {ProjectOrg}.{ProjectName}",
          "New": "@model {ProjectOrg}.{ProjectName}"
        },
        {
          "Old": "@namespace {ProjectOrg}.{ProjectName}",
          "New": "@namespace {ProjectOrg}.{ProjectName}"
        },
        {
          "Old": "@{ProjectOrg}.{ProjectName}",
          "New": "@{ProjectOrg}.{ProjectName}"
        }
      ]
    },
    {
      "Extension": ".csproj",
      "DontReplaceWhenLineContains": "PackageReference"
    },
    {
      "Extension": ".config",
      "DontReplaceWhenLineContains": "<add"
    }
  ]
}